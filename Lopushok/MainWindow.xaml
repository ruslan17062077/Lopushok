<Window x:Class="Lopushok.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lopushok"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Поиск, сортировка, фильтрация -->
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBox x:Name="SearchTextBox" Width="200" Margin="5,0"  VerticalAlignment="Center"  TextChanged="SearchTextBox_TextChanged"  />
            <ComboBox x:Name="SortComboBox" Width="120" Margin="5,0" VerticalAlignment="Center" SelectionChanged="SortComboBox_SelectionChanged">
                <ComboBoxItem Content="По имени" />
                <ComboBoxItem Content="По цене" />
                <!-- Добавьте другие варианты сортировки -->
            </ComboBox>
            <ComboBox x:Name="FilterComboBox" Width="120" Margin="5,0" VerticalAlignment="Center"  SelectionChanged="FilterComboBox_SelectionChanged" DisplayMemberPath="Title">
              
            </ComboBox>
        </StackPanel>

        <!-- Список продуктов -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ProductsItemsControl" Margin="10">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="5" Padding="10" Width="250" Background="White">
                            <StackPanel>
                                <Image Source="{Binding Images}" Width="200" Height="150" Stretch="Uniform" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding ProductType.Title}" FontSize="14" FontWeight="Bold" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding ArticleNumber, StringFormat='Артикул: {0}'}" TextWrapping="Wrap"  Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding Materials, StringFormat='Материалы: {0}'}" TextWrapping="Wrap"  Margin="0,5,0,0" />
                                <TextBlock Text="{Binding TotalCost, StringFormat='Стоимость: {0} рублей'}" TextWrapping="Wrap" FontWeight="Bold" HorizontalAlignment="Right"  Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Пагинация -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="PrevPageButton" Content="&lt;" Margin="5,0" Click="PrevPageButton_Click"/>
            <TextBlock x:Name="PageInfoTextBlock" Text="" Margin="5,0" VerticalAlignment="Center"/>
            <Button x:Name="NextPageButton" Content="&gt;" Margin="5,0" Click="NextPageButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
